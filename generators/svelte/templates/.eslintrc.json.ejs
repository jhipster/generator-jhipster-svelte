{
	"extends": [
		"eslint:recommended",
		"plugin:svelte/recommended",
		"plugin:cypress/recommended",
		"plugin:jest-dom/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"es2017": true,
		"browser": true,
		"node": true,
		"cypress/globals": true<%_ if (jestTest) { _%>,
		"jest": true
		<%_ } _%>
	},
	"plugins": ["svelte", "cypress", "jest-dom", "testing-library"],
	"overrides": [
		{
			"files": ["src/**/*.spec.js"],
			"extends": ["plugin:testing-library/dom"]
		}
	],
	"rules": {
		"no-unused-vars": "off"
	}
}
