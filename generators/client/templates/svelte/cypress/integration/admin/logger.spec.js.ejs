	if (databaseTypeSql) { _%>
			.contains('td', 'org.hibernate.mapping.RootClass')
<%_ } else { _%>
			.contains('td', 'org.mongodb.driver')
<%_ } _%>
			.parent()
			.trigger('mouseenter')
			.within($tr => {
				cy.root()
					.get('td')
					.eq(0)
					.get(`button`)
					.should('have.length', 6)
					.getBySel('infoLogLevelBtn')
					.click();
			})

		cy.wait('@changeLoggers')

		cy.getBySel('loggersTable')
