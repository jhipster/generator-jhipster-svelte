{
	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
<%_
if (!skipClient) { _%>
	"semi": false,
	"singleQuote": true,
	"arrowParens": "avoid",
	"svelteSortOrder": "options-scripts-styles-markup",
	"svelteStrictMode": true,
<%_ } _%>
	"plugins": [
<%_ if (backendTypeJavaAny) { _%>
		"prettier-plugin-java",
<%_ } _%>
		"prettier-plugin-organize-imports",
		"prettier-plugin-packagejson",
		"prettier-plugin-svelte"
	],
	"overrides": [
		{
			"files": "src/test/resources/**/*.html",
			"options": {
				"printWidth": 140
			}
		}<% if (!skipServer && javaPrettier && backendTypeJavaAny) { %>,
		{
			"files": "*.java",
			"options": {
				"useTabs": false,
				"printWidth": 140
			}
		}<% } %>
	]
}
